[Unit]
Description=HealthHub LangGraph Agent
After=network.target

[Service]
User=openhabian
WorkingDirectory=/home/openhabian/langraph-backend
EnvironmentFile=/home/openhabian/langraph-backend/.env
ExecStart=/home/openhabian/langgraph-venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
