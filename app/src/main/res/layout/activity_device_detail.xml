<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DeviceDetailActivity">

    <ImageView
        android:id="@+id/detailDeviceImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/device_image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/staticAttributesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:minHeight="110dp"
        app:layout_constraintStart_toEndOf="@id/detailDeviceImageView"
        app:layout_constraintTop_toTopOf="@id/detailDeviceImageView"
        app:layout_constraintEnd_toStartOf="@+id/verticalDividerForProperties"
        app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_weight="1">
    <!-- ... (TextViews for static attributes) ... -->
    <TextView
        android:id="@+id/detailDeviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        tools:text="Device Name" />

    <TextView
        android:id="@+id/detailStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="Status: ONLINE" />

    <TextView
        android:id="@+id/detailUseDueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Time to Use"
        tools:visibility="visible" />
</LinearLayout>

<View
android:id="@+id/verticalDividerForProperties"
android:layout_width="1dp"
android:layout_height="0dp"
android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintStart_toEndOf="@id/staticAttributesContainer"
    app:layout_constraintEnd_toStartOf="@+id/dynamicPropertiesScrollViewTop"
    app:layout_constraintTop_toTopOf="@id/staticAttributesContainer"
    app:layout_constraintBottom_toBottomOf="@id/staticAttributesContainer"/>

<HorizontalScrollView
android:id="@+id/dynamicPropertiesScrollViewTop"
android:layout_width="0dp"
android:layout_height="0dp"
android:minHeight="110dp"
app:layout_constraintStart_toEndOf="@id/verticalDividerForProperties"
app:layout_constraintTop_toTopOf="@id/staticAttributesContainer"
app:layout_constraintBottom_toBottomOf="@id/staticAttributesContainer"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_weight="9"
    android:fillViewport="true">

<LinearLayout
android:id="@+id/propertiesContainerTop"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:orientation="horizontal"
android:gravity="center_vertical"
android:paddingStart="4dp"
android:paddingEnd="4dp"/>
    </HorizontalScrollView>

<androidx.constraintlayout.widget.Barrier
android:id="@+id/topSectionBarrier"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:barrierDirection="bottom"
app:constraint_referenced_ids="detailDeviceImageView,staticAttributesContainer,dynamicPropertiesScrollViewTop" />

<View
android:id="@+id/mainHorizontalDivider_corrected"
android:layout_width="0dp"
android:layout_height="1dp"
android:layout_marginTop="16dp"
android:background="?android:attr/listDivider"
app:layout_constraintTop_toBottomOf="@id/topSectionBarrier"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

<com.github.mikephil.charting.charts.LineChart
android:id="@+id/livePlotChart"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/mainHorizontalDivider_corrected"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


